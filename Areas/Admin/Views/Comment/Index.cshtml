@model List<HaberPortali2.Models.Comment>
@using HaberPortali2.Models

@{
    ViewData["Title"] = "Yorum Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var news = ViewBag.News as List<News> ?? new();
}

<h3 class="fw-bold mb-4">💬 Yorum Yönetimi</h3>

<table class="table table-bordered table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Kullanıcı</th>
            <th>Haber</th>
            <th>Yorum</th>
            <th>Tarih</th>
            <th style="width:200px;">İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            var n = news.FirstOrDefault(x => x.Id == c.NewsId);

            <tr>
                <td>@c.Id</td>
                <td>@c.UserName</td>
                <td>
                    @if (n != null)
                    {
                        <a href="/News/Detail/@n.Id" target="_blank">
                            @n.Title
                        </a>
                    }
                    else
                    {
                        <span>-</span>
                    }
                </td>
                <td>@c.Text</td>
                <td>@c.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <form method="post"
                          action="/Admin/Comment/Delete"
                          style="display:inline">
                        <input type="hidden" name="id" value="@c.Id" />
                        <input type="hidden" name="newsId" value="@c.NewsId" />
                        <button class="btn btn-sm btn-danger me-1"
                                onclick="return confirm('Yorum silinsin mi?')">
                            Yorumu Sil
                        </button>
                    </form>

                    @if (n != null)
                    {
                        <form method="post"
                              action="/Admin/News/Delete"
                              style="display:inline">
                            <input type="hidden" name="id" value="@n.Id" />
                            <button class="btn btn-sm btn-dark"
                                    onclick="return confirm('HABER ve TÜM yorumları silinecek. Emin misin?')">
                                Haberi Sil
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
