@model List<HaberPortali2.Models.News>

@{
    ViewData["Title"] = "Haber Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">📰 Haber Yönetimi</h3>

        <a href="/Admin/News/Add" class="btn btn-success shadow-sm px-3">
            ➕ Yeni Haber Ekle
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            Henüz haber eklenmemiş.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped table-bordered align-middle shadow-sm">

                <thead class="table-dark text-center">
                    <tr>
                        <th style="width:60px;">ID</th>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th style="width:120px;">Görsel</th>
                        <th style="width:130px;">Tarih</th>
                        <th style="width:180px;">İşlemler</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center fw-bold">@item.Id</td>

                            <td>@item.Title</td>

                            <td class="text-center">
                                <span class="badge bg-primary">@item.Category?.Name</span>
                            </td>

                            <td class="text-center">
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl"
                                         style="width:90px; height:60px; object-fit:cover; border-radius:5px;" />
                                }
                                else
                                {
                                    <img src="https://via.placeholder.com/90x60?text=Yok"
                                         class="rounded border" />
                                }
                            </td>

                            <td class="text-center">@item.CreatedDate.ToString("dd.MM.yyyy")</td>

                            <td class="text-center">
                                <a href="/Admin/News/Edit/@item.Id"
                                   class="btn btn-warning btn-sm me-1 shadow-sm">
                                    ✏ Düzenle
                                </a>

                                <a href="/Admin/News/Delete/@item.Id"
                                   class="btn btn-danger btn-sm shadow-sm"
                                   onclick="return confirm('Bu haberi silmek istediğinize emin misiniz?')">
                                    🗑 Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    }
</div>
