@model HaberPortali2.Models.Category

@{
    ViewData["Title"] = "Yeni Kategori Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">

    <h3 class="fw-bold mb-4">Yeni Kategori Ekle</h3>

    <!-- HATA MESAJI (aktif kategori isim çakışması) -->
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form method="post" action="/Admin/Category/Add">

        <!-- Kategori Adı -->
        <div class="mb-3">
            <label class="form-label">Kategori Adı</label>
            <input type="text" name="Name" value="@Model?.Name" class="form-control" required />
        </div>

        <!-- Aktif / Pasif -->
        <div class="mb-3">
            <label class="form-label">Kategori Durumu</label>
            <select name="IsActive" class="form-select">
                <option value="true">Aktif</option>
                <option value="false">Pasif</option>
            </select>
        </div>

        <!-- Butonlar -->
        <button class="btn btn-success">Kaydet</button>
        <a href="/Admin/Category" class="btn btn-secondary ms-2">Geri</a>

    </form>

</div>
