@model IEnumerable<HaberPortali2.Models.Category>

@{
    ViewData["Title"] = "Kategori Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">

    <h3 class="fw-bold mb-4">Kategori Yönetimi</h3>

    <!-- Kategori Ekle -->
    <a href="/Admin/Category/Add" class="btn btn-success mb-3">+ Yeni Kategori Ekle</a>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            Henüz kategori eklenmemiş.
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped">

            <thead class="table-dark">
                <tr>
                    <th style="width:60px;">ID</th>
                    <th>Kategori Adı</th>
                    <th style="width:120px;">Durum</th>
                    <th style="width:160px;">İşlemler</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>

                        <td>@item.Name</td>

                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Pasif</span>
                            }
                        </td>

                        <td>
                            <a href="/Admin/Category/Edit/@item.Id"
                               class="btn btn-warning btn-sm">
                                Düzenle
                            </a>

                            <a href="/Admin/Category/Delete/@item.Id"
                               onclick="return confirm('Bu kategori silinsin mi?')"
                               class="btn btn-danger btn-sm">
                                Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
</div>
