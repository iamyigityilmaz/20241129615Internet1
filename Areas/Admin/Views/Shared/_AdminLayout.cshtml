@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@ViewData["Title"] - Admin Paneli</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f0f2f5;
        }

        .admin-sidebar {
            width: 230px;
            height: 100vh;
            background: #212529;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 20px;
            color: white;
            overflow-y: auto;
        }

            .admin-sidebar a {
                color: #cfcfcf;
                padding: 12px 20px;
                display: block;
                font-size: 15px;
                text-decoration: none;
            }

                .admin-sidebar a:hover {
                    background: #343a40;
                    color: #fff;
                }

        .admin-content {
            margin-left: 230px;
            padding: 20px;
        }

        .topbar {
            background: #ffffff;
            padding: 12px 20px;
            border-radius: 8px;
            box-shadow: 0 1px 4px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }
    </style>
</head>

<body>

    <div class="admin-sidebar">
        <h5 class="text-center text-white mb-4">🛠 Admin Panel</h5>

        <a href="/Admin/Home">📊 Dashboard</a>
        <a href="/Admin/Category">📁 Kategori Yönetimi</a>
        <a href="/Admin/News">📰 Haber Yönetimi</a>

        <hr style="border-color: #555;" />

        <a href="/Admin/AdminAuth/Logout" class="text-danger fw-bold">❌ Çıkış Yap</a>
    </div>

    <div class="admin-content">
        <div class="topbar d-flex justify-content-between align-items-center">
            <h4 class="m-0">@ViewData["Title"]</h4>
            <span class="text-muted">👤 Admin Paneline Hoş Geldin</span>
        </div>

        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
