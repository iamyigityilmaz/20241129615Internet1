@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Dashboard";

    int totalNews = ViewBag.TotalNews ?? 0;
    int totalCategories = ViewBag.TotalCategories ?? 0;
}

<div class="container mt-4">

    <h2 class="fw-bold mb-4">📊 Yönetim Paneli</h2>

    <div class="row mb-4">

        <!-- Toplam Haber -->
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-primary shadow-sm">
                <div class="card-body">
                    <h3>@totalNews</h3>
                    <p>Toplam Haber</p>
                </div>
            </div>
        </div>

        <!-- Toplam Kategori -->
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-success shadow-sm">
                <div class="card-body">
                    <h3>@totalCategories</h3>
                    <p>Toplam Kategori</p>
                </div>
            </div>
        </div>
        <!-- YAYINDAKİ HABERLER KUTUSU KALDIRILDI -->
    </div>

    <div class="row">

        <div class="col-md-4 mb-3">
            <a href="/Admin/Category" class="btn btn-primary w-100 p-3">
                📁 Kategorileri Yönet
            </a>
        </div>

        <div class="col-md-4 mb-3">
            <a href="/Admin/News" class="btn btn-warning w-100 p-3 text-white">
                📰 Haberleri Yönet
            </a>
        </div>

        <div class="col-md-4 mb-3">
            <a href="/Admin/AdminAuth/Logout" class="btn btn-danger w-100 p-3">
                ❌ Çıkış Yap
            </a>
        </div>

    </div>

</div>
