@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">

    <h3 class="fw-bold mb-4">📊 Yönetim Paneli</h3>

    <!-- İSTATİSTİK KARTLARI -->
    <div class="row g-4 mb-4">

        <!-- Toplam Haber -->
        <div class="col-md-4">
            <div class="card shadow border-0" style="background:#0d6efd;">
                <div class="card-body text-white">
                    <h2 class="fw-bold">@ViewBag.TotalNews</h2>
                    <p class="m-0">Toplam Haber</p>
                </div>
            </div>
        </div>

        <!-- Toplam Kategori -->
        <div class="col-md-4">
            <div class="card shadow border-0" style="background:#198754;">
                <div class="card-body text-white">
                    <h2 class="fw-bold">@ViewBag.TotalCategories</h2>
                    <p class="m-0">Toplam Kategori</p>
                </div>
            </div>
        </div>

        <!-- Yayında Olan Haber Sayısı -->
        <div class="col-md-4">
            <div class="card shadow border-0" style="background:#6c757d;">
                <div class="card-body text-white">
                    <h2 class="fw-bold">@ViewBag.PublishedNews</h2>
                    <p class="m-0">Yayındaki Haberler</p>
                </div>
            </div>
        </div>

    </div>

    <!-- YÖNETİM BUTONLARI -->
    <div class="row g-4">

        <div class="col-md-4">
            <a href="/Admin/Category" class="btn btn-primary w-100 p-3 shadow-sm">
                📁 Kategorileri Yönet
            </a>
        </div>

        <div class="col-md-4">
            <a href="/Admin/News" class="btn btn-warning w-100 p-3 shadow-sm text-white">
                📰 Haberleri Yönet
            </a>
        </div>

        <div class="col-md-4">
            <a href="/Admin/AdminAuth/Logout" class="btn btn-danger w-100 p-3 shadow-sm">
                ❌ Çıkış Yap
            </a>
        </div>

    </div>

</div>
