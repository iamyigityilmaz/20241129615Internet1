@model HaberPortali2.Models.Comment

@{
    ViewData["Title"] = "Yorumu Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">

    <h3 class="fw-bold mb-4">✏ Yorumu Düzenle</h3>

    <div class="card shadow-sm">
        <div class="card-body">

            <form method="post" action="/User/EditComment">

                <input type="hidden" name="Id" value="@Model.Id" />

                <div class="mb-3">
                    <label class="form-label fw-bold">Yorum</label>
                    <textarea name="Text"
                              class="form-control"
                              rows="5"
                              required>@Model.Text</textarea>
                </div>

                <button class="btn btn-success">
                    Kaydet
                </button>

                <a href="/User/Profile"
                   class="btn btn-secondary ms-2">
                    İptal
                </a>

            </form>

        </div>
    </div>

</div>
