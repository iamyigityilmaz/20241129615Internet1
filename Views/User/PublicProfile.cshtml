@model HaberPortali2.Models.AppUser
@using HaberPortali2.Models

@{
    ViewData["Title"] = Model.UserName;
    Layout = "~/Views/Shared/_Layout.cshtml";

    var news = ViewBag.News as List<News> ?? new();
    var comments = ViewBag.Comments as List<Comment> ?? new();
}

<div class="container mt-4">

    <h3 class="fw-bold">@Model.UserName</h3>
    <p class="text-muted">@Model.FullName</p>

    <hr />

    <h5>📰 Yazdığı Haberler</h5>

    @foreach (var n in news)
    {
        <div>
            <a href="/News/Detail/@n.Id">@n.Title</a>
        </div>
    }

    <hr />

    <h5>💬 Yorumları</h5>

    @foreach (var c in comments)
    {
        <div class="mb-2">
            <span class="small text-muted">@c.CreatedDate.ToString("dd.MM.yyyy")</span><br />
            @c.Text
        </div>
    }

</div>
