@model HaberPortali2.Models.Category

@{
    ViewData["Title"] = "Kategori Düzenle";
}

<div class="container mt-4" style="max-width:600px;">

    <h2 class="mb-4">Kategori Düzenle</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    <form method="post" action="/Category/Edit">

        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="mb-3">
            <label class="form-label">Kategori Adı</label>
            <input type="text"
                   name="Name"
                   class="form-control"
                   value="@Model.Name"
                   required />
        </div>

        <div class="form-check form-switch mb-3">
            <input class="form-check-input"
                   type="checkbox"
                   name="IsActive"
                   @(Model.IsActive ? "checked" : "") />

            <label class="form-check-label">Aktif Olsun</label>
        </div>

        <button class="btn btn-primary">Güncelle</button>
        <a href="/Category" class="btn btn-secondary">Geri</a>
    </form>

</div>
