@model List<HaberPortali2.Models.Category>

@{
    ViewData["Title"] = "Kategori Listesi";
}

<h2 class="mt-3">Kategoriler</h2>

<a href="/Category/Add" class="btn btn-success mb-3">+ Yeni Kategori</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Durum</th>
            <th style="width:150px;">İşlemler</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@(item.IsActive ? "Aktif" : "Pasif")</td>

                <td>
                    <a href="/Category/Edit/@item.Id" class="btn btn-primary btn-sm">Düzenle</a>
                    <a href="/Category/Delete/@item.Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Silmek istediğine emin misin?');">
                        Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
