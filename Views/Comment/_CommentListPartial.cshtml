@model IEnumerable<HaberPortali2.Models.Comment>

@if (Model == null || !Model.Any())
{
    <p class="text-muted">Yorum Yap!</p>
}
else
{
    <div class="list-group">
        @foreach (var c in Model)
        {
            <div class="list-group-item">
                <strong>@c.UserName</strong>
                <span class="text-muted"> - @c.CreatedDate.ToString("dd.MM.yyyy HH:mm")</span>

                <p class="mt-2">@c.Text</p>
            </div>
        }
    </div>
}
